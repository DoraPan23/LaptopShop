<select id="changeYear" onchange="changeYear()">
    <option value="">Chọn năm</option>
    <option value="2019">2019</option>
    <option value="2020">2020</option>
    <option value="2021">2021</option>
</select>
<table hidden class="table table-bordered" id="dataTableForChart">
    <thead>
        <th>Year</th>
    </thead>
        <tbody>
            @if (ListRevenue != null)
            {
                for (int i = 0; i < 12; i++)
                {
                    <tr>
                        <td>@ListRevenue[i]</td>
                    </tr>
                }
            }


        </tbody>
</table>
    <div class="row">
        <div class="col-xl-11 col-lg-7 col-md-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            Revenue of year @year: @ListRevenue[12]
                        </h6>
                    </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    function changeYear() {
                        var year = document.getElementById("changeYear").value;
                        location.href = "http://localhost:14787/Admin/Dashboard/Index?year=" + year;
                    }
</script>