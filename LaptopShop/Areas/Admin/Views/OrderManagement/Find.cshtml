
@{
    ViewBag.Title = "Find";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript">
    function find() {
        var formDay = document.getElementById("FromDay");
        var toDay = document.getElementById("ToDay");
        var text = formDay.value + "_" + toDay.value;
        if (formDay.value != "" && toDay.value != "") {
            window.location = "/Admin/OrderManagement/Find/" + text;
        }
    }
</script>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <p>Từ ngày : <input type="date" id="FromDay" onchange="find()" /></p>
            <p>Đến ngày : <input type="date" id="ToDay" onchange="find()" /></p>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Stt</th>
                        <th>Id</th>
                        <th>Ngày</th>
                        <th>Tổng giá</th>
                        <th>Trạng thái</th>
                        <th>Cập nhật</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Stt</th>
                        <th>Id</th>
                        <th>Ngày</th>
                        <th>Tổng giá</th>
                        <th>Trạng thái</th>
                        <th>Cập nhật</th>
                        <th>Chi tiết</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{
                        int count = 0;
                        String[] status = new String[] {
                                "",
                                "Tiếp nhận",
                                "Đang giao",
                                "Hoàn thành",
                                "Đã hủy",
                            };
                        foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td id="ID">@item.ID</td>
                                <td>@item.Date</td>
                                <td>@item.Total_Price</td>
                                <td>@status[item.Status]</td>
                                <!--<td>
                                <select name="Status" id="Status">
                                    for (var i = 1; i < 5; i++)
                                    {
                                        if (i == item.Status)
                                        {
                                            <option selected></option>
                                        }
                                        else
                                        {
                                            <option>status[i]</option>
                                        }
                                    }
                                </select>
                                                                            <td>
                                -->
                                <td>
                                    <a href="/Admin/OrderManagement/Edit/@item.ID">Edit</a>
                                </td>

                                <td>
                                    <a href="/Admin/OrderManagement/Detail/@item.ID">Xem</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>



