
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script type="text/javascript">
    function checkDate(formDay, toDay) {
        if (formDay.value == "" || toDay.value == "") {
            return false;
        }

        var yearFD = Number.parseInt(formDay.value.split("-")[0]);
        if (yearFD > 2019) {
            return false;
        }

        var yearTD = Number.parseInt(toDay.value.split("-")[0]);
        alert(yearTD);
        if (yearTD > 2019) {
            return false;
        }

        return true;

    }
    function find() {
        var formDay = document.getElementById("FromDay");
        var toDay = document.getElementById("ToDay");
        if (this.checkDate(formDay, toDay)) {
            var text = formDay.value + "_" + toDay.value;
            window.location = "/Admin/OrderMangement/Find/" + text;
        }
    }
</script>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <p>Từ ngày : <input type="date" id="FromDay" onchange="find()"/></p>
            <p>Đến ngày : <input type="date" id="ToDay" onchange="find()"/></p>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Stt</th>
                        <th>Id</th>
                        <th>Ngày</th>
                        <th>Tổng giá</th>
                        <th>Trạng thái</th>
                        <th>Cập nhật</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Stt</th>
                        <th>Id</th>
                        <th>Ngày</th>
                        <th>Tổng giá</th>
                        <th>Trạng thái</th>
                        <th>Cập nhật</th>
                        <th>Chi tiết</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{
                        int count = 0;
                        String[] status = new String[] {
                                "",
                                "Tiếp nhận",
                                "Đang giao",
                                "Hoàn thành",
                                "Đã hủy",
                            };
                        foreach (var item in Model)
                        {
                            count++;
                            <tr>
