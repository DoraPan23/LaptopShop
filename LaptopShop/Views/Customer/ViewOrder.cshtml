
@{
    ViewBag.Title = "ViewOrder";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var stt = 1;
    double total = 0;

    var orderDetail =  ViewBag.OrderDetail;
}


<div class="privacy">
    <div class="container">
        <!-- tittle heading -->
        <h3 class="tittle-w3l">
            Your order
            <span class="heading-style">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </h3>
        <!-- //tittle heading -->
        <div class="checkout-right">
            @if (Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="timetable_sub">
                        <thead>
                            <tr>
                                <th>SL No.</th>
                                <th>Date</th>
                                <th>Total rice</th>
                                <th>Status</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID" class="rem\@stt">
                                    <td class="invert">@stt</td>

                                    <td class="invert">@item.Date</td>
                                    <td class="invert">@item.Total_Price</td>
                                    <td class="invert">@item.Status</td>
                                    <td>
                                        <input type="submit" value="Add to cart" class="button" onclick="popupDetail1()" />
                                        <div id="PPminicartk">
                                            <button type="button" class="minicartk-closer">×</button>
                                            <ul>
                                                @foreach (var product in orderDetail)
                                                {
                                                <li class="minicartk-item minicartk-item-changed" id="popupDetail">
                                                    <div class="minicartk-details-name"><a class="minicartk-name" href="http://localhost:14787/Home/Index1">@product.ProductName</a><ul class="minicartk-attributes"></ul></div><div class="minicartk-details-quantity"><input class="minicartk-quantity" data-minicartk-idx="0" name="quantity_1" type="text" pattern="[0-9]*" value="@product.Quantity"></div><div class="minicartk-details-price"><span class="minicartk-price">@product.Price</span></div>
                                                </li>
                                                }
                                             </ul>
                                        </div>
                                    </td>
                                    @*<td>
                                        @Ajax.ActionLink("Delete", "Delete", new { @id = @item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Are you sure to delete this item?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>*@
                                </tr>
                                stt = stt + 1;
                            }


                            <h4>Total: @total</h4>
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <span> You don't have any order </span>
            }
        </div>
    </div>
</div>

