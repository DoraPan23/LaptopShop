@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var CartUser = ViewBag.CartUser;
    double total = 0;
    int stt = 1;

}

<div class="privacy">
    <div class="container">
        <div class="checkout-right-basket">
            <div class="address_form_agile">
                <h4>Add a new Details</h4>
                @*<form action="payment.html" method="post" class="creditly-card-form agileinfo_form col-md-5">*@
                @using (Html.BeginForm("AddOrder", "User", FormMethod.Post))
                {
                    <div class="creditly-wrapper wthree, w3_agileits_wrapper col-md-5">
                        <div class="information-wrapper">
                            <div class="first-row ">
                                <div class="controls">
                                    @*<input class="billing-address-name" type="text" name="name" placeholder="Full Name" required="">*@
                                    @Html.TextBox("receiver", "", new { @placeholder = "Receiver" })
                                </div>
                                <div class="controls">
                                    @*<input type="text" placeholder="Mobile Number" name="number" required="">*@
                                    @Html.TextBox("mobile numeber", "", new { @placeholder = "Mobile Name", @name = "number" })
                                </div>
                                <div class="controls">
                                    @*<input type="text" placeholder="Landmark" name="landmark" required="">*@
                                    @Html.TextBox("address", "", new { @placeholder = "Address", @name = "address" })
                                </div>
                                <div class="clear"> </div>
                            </div>
                            <button class="submit check_out" type="submit">Delivery to this Address</button>
                        </div>
                    </div>
                }

                @*</form>*@
                <div class="col-md-7">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Your order</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in CartUser)
                            {
                                total = total + (item.Price * item.Quantity);
                            <tr>
                                <td>@stt</td>
                                <td> @item.ProductName</td>
                                <td> @item.Quantity</td>
                                <td>@item.Price</td>
                            </tr>
                                stt = stt + 1;
                            }

                            <tr>
                                <td colspan="3" style="text-align:right">Total: @total</td>
                                <td>đ</td>
                            </tr>

                        </tbody>
                    </table>
                </div>

            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>