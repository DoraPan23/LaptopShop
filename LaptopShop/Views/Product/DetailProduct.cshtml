
@{
    ViewBag.Title = "DetailProduct";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var ProductDetail = (LaptopShop.Models.Product)ViewBag.ProductDetail;

    string Specification = ViewBag.SpecificationProduct;
    string[] data = Specification.Split(new string[] { ";" }, StringSplitOptions.None);

    var ProductRelated = (List<LaptopShop.Models.Product>)ViewBag.ProductRelated;
}

<div class="banner-bootom-w3-agileits">
    <div class="container">
        <!-- tittle heading -->
        <h3 class="tittle-w3l">
            @ProductDetail.Product_Name
            <span class="heading-style">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </h3>
        <!-- //tittle heading -->
        <div class="col-md-5 single-right-left ">
            <div class="grid images_3_of_2">
                <div class="flexslider">

                    <div class="clearfix"></div>
                    <div class="flex-viewport" style="overflow: hidden; position: relative;">
                        <ul class="slides" style="width: 1000%; transition-duration: 0s; transform: translate3d(-436px, 0px, 0px);">
                            
                            <li data-thumb="~/Assets/Layout2/@(Url.Content(ProductDetail.Image))" class="" style="width: 436px; float: left; display: block;">
                                <div class="thumb-image">
                                    <img src="~/Assets/Layout2/@(Url.Content(ProductDetail.Image))" data-imagezoom="true" class="img-responsive" alt="" draggable="false">
                                </div>
                            </li>
                            <li data-thumb="~/Assets/Layout2/@(Url.Content(ProductDetail.Image))" style="width: 436px; float: left; display: block;" class="clone" aria-hidden="true">
                                <div class="thumb-image">
                                    <img src="~/Assets/Layout2/@(Url.Content(ProductDetail.Image))" data-imagezoom="true" class="img-responsive" alt="" draggable="false">
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-7 single-right-left simpleCart_shelfItem">
            <h3>@ProductDetail.Product_Name</h3>
            <div class="rating1">
                <span class="starRating">
                    <input id="rating5" type="radio" name="rating" value="5">
                    <label for="rating5">5</label>
                    <input id="rating4" type="radio" name="rating" value="4">
                    <label for="rating4">4</label>
                    <input id="rating3" type="radio" name="rating" value="3" checked="">
                    <label for="rating3">3</label>
                    <input id="rating2" type="radio" name="rating" value="2">
                    <label for="rating2">2</label>
                    <input id="rating1" type="radio" name="rating" value="1">
                    <label for="rating1">1</label>
                </span>
            </div>
            <p>
                <span class="item_price">
                    @(ProductDetail.Discount.Value==0 ? Convert.ToDecimal(
                                                        Decimal.ToDouble((decimal)ProductDetail.Price) -
                                                        Decimal.ToDouble((decimal)ProductDetail.Price) * ProductDetail.Discount / 100)
                                                        : ProductDetail.Price
                     )
                </span>
                <del>@(ProductDetail.Discount.Value==0 ? ProductDetail.Price.ToString() : "")</del>
                <label>Free delivery</label>
            </p>
            <div class="single-infoagile">
                <ul>
                    <li>
                        Cash on Delivery Eligible.
                    </li>
                    <li>
                        Shipping Speed to Delivery.
                    </li>
                </ul>
            </div>
            <div class="product-single-w3l">
                <p>
                    <i class="fa fa-hand-o-right" aria-hidden="true"></i>This is a
                    <label>Genuine</label> product.
                </p>
                <ul>
                    @foreach (string item in data)
                    {
                        <li>
                            @item
                        </li>
                    }
                </ul>
                <p>
                    <i class="fa fa-refresh" aria-hidden="true"></i>This products are
                    <label>returnable.</label>
                </p>
            </div>
            @if (ProductDetail.Amount > 0)
            {
                <div class="occasion-cart">
                    <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                        <a href="http://localhost:14787/Cart/Add?id=@ProductDetail.ID&quantity=1"><input type="submit" name="submit" value="Add to cart" class="button"></a>
                        @*<a onclick="return checkAmount(@ProductDetail.ID)" href="http://localhost:14787/Cart/Add?id=@ProductDetail.ID&quantity=1"><input type="submit" name="submit" value="Add to cart" class="button"></a>*@
                    </div>

                </div>
            }
            else
            {
                <p>
                    <i class="fa fa-refresh" aria-hidden="true"></i>This product is
                    <label>Out of stock</label>
                </p>
            }

        </div>
        <div class="clearfix"> </div>
    </div>
</div>

        <!-- ---------------------------------RELATED PRODUCT---------------------------------- -->
<div class="featured-section" id="projects">
    <div class="container">
        <!-- tittle heading -->
        <h3 class="tittle-w3l">
            RELATED PRODUCT
            <span class="heading-style">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </h3>
        <!-- //tittle heading -->
        <div class="content-bottom-in">
                <div class="nbs-flexisel-inner">
                    <ul id="flexiselDemo1" class="nbs-flexisel-ul" style="left: -374.878px;">
                        @foreach (var item in ProductRelated)
                        {
                            <li class="nbs-flexisel-item" style="width: 342.667px;">
                                <div class="w3l-specilamk">
                                    <div class="speioffer-agile">
                                        <a href="http://localhost:14787/Product/DetailProduct/@item.ID">
                                            <img src="~/Assets/Layout2/@(Url.Content(item.Image))" width="150px" height="150px" alt="@item.Product_Name">
                                        </a>
                                    </div>
                                    <div class="product-name-w3l">
                                        <h4>
                                            <a href="http://localhost:14787/Product/DetailProduct/@item.ID">@item.Product_Name</a>
                                        </h4>
                                        <div class="w3l-pricehkj">
                                            <h6>@(item.Discount.Value==0? Convert.ToDecimal(
                                            Decimal.ToDouble((decimal)item.Price) -
                                            Decimal.ToDouble((decimal)item.Price) * item.Discount / 100)
                                            : item.Price)</h6>
                                            @(item.Discount!=0? "Save" + item.Discount.Value.ToString()+ "%" : "")
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul><div class="nbs-flexisel-nav-left" style="top: 178px;"></div><div class="nbs-flexisel-nav-right" style="top: 178px;"></div>
                </div>
            </div>
    </div>
</div>

